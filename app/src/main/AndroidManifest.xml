<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.softry.learnjava">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeChapterSelect">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChaptersActivity"
            android:parentActivityName=".MainActivity"
            android:label="Select chapter"
            android:theme="@style/AppThemeChapterSelect"/>
        <activity
            android:name=".LessonsActivity"
            android:parentActivityName=".ChaptersActivity"/>
        <activity
            android:name=".InLessonActivity"
            android:label=" "
            android:parentActivityName=".LessonsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.softry.learnjava.LessonsActivity" />
        </activity>
    </application>

</manifest>