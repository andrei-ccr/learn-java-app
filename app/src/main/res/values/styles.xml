<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppThemeChapterSelect" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#eee</item>
        <item name="colorPrimaryDark">#222</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimaryInverse">@color/_lighterBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#0099cc</item>
        <item name="colorPrimaryDark">#0099cc</item>
    </style>



    <style name="AppTheme.ChapterOne">
        <item name="colorPrimary">@color/_chapter1color</item>
        <item name="colorPrimaryDark">@color/_chapter1color</item>
    </style>

    <style name="AppTheme.ChapterTwo">
        <item name="colorPrimary">@color/_chapter2color</item>
        <item name="colorPrimaryDark">@color/_chapter2color</item>
    </style>

    <style name="AppTheme.ChapterThree">
        <item name="colorPrimary">@color/_chapter3color</item>
        <item name="colorPrimaryDark">@color/_chapter3color</item>
    </style>

    <style name="AppTheme.ChapterFour">
        <item name="colorPrimary">@color/_chapter4color</item>
        <item name="colorPrimaryDark">@color/_chapter4color</item>
    </style>

    <style name="AppTheme.ChapterFive">
        <item name="colorPrimary">@color/_chapter5color</item>
        <item name="colorPrimaryDark">@color/_chapter5color</item>
    </style>

    <style name="AppTheme.ChapterSix">
        <item name="colorPrimary">@color/_chapter6color</item>
        <item name="colorPrimaryDark">@color/_chapter6color</item>
    </style>

    <style name="AppTheme.ChapterSeven">
        <item name="colorPrimary">@color/_chapter7color</item>
        <item name="colorPrimaryDark">@color/_chapter7color</item>
    </style>

    <array name="ChaptersColor">
        <item>@style/AppTheme.ChapterOne</item>
        <item>@style/AppTheme.ChapterTwo</item>
        <item>@style/AppTheme.ChapterThree</item>
        <item>@style/AppTheme.ChapterFour</item>
        <item>@style/AppTheme.ChapterFive</item>
        <item>@style/AppTheme.ChapterSix</item>
        <item>@style/AppTheme.ChapterSeven</item>
    </array>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
