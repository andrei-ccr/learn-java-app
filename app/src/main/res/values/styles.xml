    <style name="SideBarStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme_Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#1274bf</item>
        <item name="colorPrimaryDark">#1274bf</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_Main_Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#1274bf</item>
        <item name="colorPrimaryDark">#1274bf</item>
        <item name="colorAccent">#0099cc</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#0099cc</item>
        <item name="colorPrimaryDark">#0099cc</item>
    </style>

